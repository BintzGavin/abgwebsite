{% extends '_layouts/site' %}
{% set title = entry.title %}

{% if entry.heading is not empty %}
    {% set heading = entry.heading %}
{% else %}
    {% set heading = title %}
{% endif %}


{% block main %}

    {% include '_modules/_subnav' %}

    {% include '_includes/_make-banner' %}

    <header class="banner banner--tall">
        <h1 class="banner__heading">{{ heading | raw }}</h1>
    </header>

    <div class="page international banner-overlap banner-overlap--big">

        {% include '_modules/_content-blocks' with {'containerClass': 'l-container--9'} %}

    </div>

{% endblock %}
